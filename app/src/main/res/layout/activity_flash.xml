<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhang.vmovie.activitys.FlashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flash_bg"
        android:scaleType="fitXY"
        android:src="@mipmap/splash_background"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flash_logo"
        android:src="@mipmap/splash_logo"
        android:layout_marginTop="80dp"
        android:layout_gravity="top|center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/splash_title"
        android:id="@+id/flash_title"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"

        />


</FrameLayout>
