<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/login_framelayout_background"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/login_bg" />

        <ImageView
            android:id="@+id/loginpage_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back_icon" />
    </FrameLayout>


    <EditText
        android:id="@+id/editText2"
        android:layout_width="260dp"
        android:layout_height="40dp"

        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:hint="邮箱"
        android:textColorHint="#aaaaaa" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="260dp"
        android:layout_height="40dp"

        android:layout_below="@+id/login_framelayout_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:hint="密码"
        android:textColorHint="#aaaaaa" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/btn_login_shape"
        android:text="登录"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_login"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="19dp"
        android:id="@+id/linearLayout">
        <View
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:background="#aaaaaa"
            android:layout_height="0.1dp"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#aaaaaa"
            android:text="使用社交平台登录/注册"/>
        <View
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:background="#aaaaaa"
            android:layout_height="0.1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="19dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/share_vblog"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/share_qq" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/share_wechat"/>
    </LinearLayout>
</RelativeLayout>
